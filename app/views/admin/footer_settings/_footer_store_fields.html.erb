<div class="col-12 nested-fields" data-new-record="<%= f.object.new_record? %>">
  <div class="card border-0 shadow-sm bg-light">
    <div class="card-body p-3">
      <div class="d-flex justify-content-between mb-2">
        <div class="d-flex align-items-center gap-2">
          <span class="badge bg-primary rounded-circle" data-position-label style="width: 24px; height: 24px; display: flex; align-items: center; justify-content: center;">
            <%= f.object.position || 1 %>
          </span>
          <label class="form-label mb-0 fw-bold"><i class="bi bi-geo-alt me-1"></i>Unidade / Loja</label>
          <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary py-0 px-1" data-action="nested-form#moveUp" title="Mover para cima">
              <i class="bi bi-chevron-up"></i>
            </button>
            <button type="button" class="btn btn-outline-secondary py-0 px-1" data-action="nested-form#moveDown" title="Mover para baixo">
              <i class="bi bi-chevron-down"></i>
            </button>
          </div>
        </div>
        <button type="button" class="btn btn-link text-danger p-0" data-action="nested-form#remove">
          <i class="bi bi-trash"></i> Remover
        </button>
      </div>
      <%= f.hidden_field :_destroy %>
      <%= f.hidden_field :position %>
      
      <div class="mb-2">
        <%= f.text_field :name, class: "form-control form-control-sm", placeholder: "Nome da Loja (ex: Loja Centro)" %>
      </div>
      
      <div class="mb-2">
        <%= f.text_field :address, class: "form-control form-control-sm", placeholder: "EndereÃ§o completo" %>
      </div>

      <div class="row g-2">
        <div class="col-6 mb-2">
          <%= f.text_field :zip_code, class: "form-control form-control-sm", placeholder: "CEP" %>
        </div>
        <div class="col-6 mb-2">
          <%= f.text_field :creci, class: "form-control form-control-sm", placeholder: "CRECI" %>
        </div>
      </div>
      
      <div class="mb-0">
        <%= f.text_field :phone, class: "form-control form-control-sm", placeholder: "Telefone" %>
      </div>
    </div>
  </div>
</div>
