<div class="admin-content">
  <h1><%= @seo_setting.persisted? ? "Editar" : "Novo" %> SEO</h1>

  <%= form_with(model: [:admin, @seo_setting], class: "admin-form") do |f| %>
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :page_name, "Nome da PÃ¡gina" %>
          <%= f.text_field :page_name, class: "form-control", placeholder: "home, about, contact" %>
        </div>
        <div class="mb-3">
          <%= f.label :meta_title %>
          <%= f.text_field :meta_title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :meta_description %>
          <%= f.text_area :meta_description, rows: 3, class: "form-control" %>
        </div>
        <%= f.submit "Salvar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
