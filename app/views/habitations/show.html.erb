<!-- Página de Detalhes do Imóvel - Layout Moderno -->
<div class="bg-gray-50 min-h-screen pb-12 habitation-details" data-property-id="<%= @habitation.id %>">
  
  <!-- Breadcrumb -->
  <div class="bg-white border-b border-gray-100 py-3 mt-[72px]">
    <div class="container-custom">
      <div class="flex items-center gap-2 text-xs text-gray-400 uppercase tracking-wide">
        <%= link_to "Início", root_path, class: "hover:text-blue-three" %>
        <i class="bi bi-chevron-right text-[10px]"></i>
        <%= link_to "Imóveis", habitations_path, class: "hover:text-blue-three" %>
        <i class="bi bi-chevron-right text-[10px]"></i>
        <span class="text-blue-three font-bold"><%= @habitation.codigo %></span>
      </div>
    </div>
  </div>

  <!-- JSON-LD Structured Data for SEO -->
  <script type="application/ld+json">
    <%= @habitation.structured_data.to_json.html_safe %>
  </script>

  <div class="container-custom mt-6">
    
    <!-- Header: Título e Preço -->
    <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
      <div class="flex flex-col lg:flex-row justify-between items-start gap-4">
        <div class="flex-1">
          <div class="flex items-start gap-3 mb-3">
            <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">
              <%= @habitation.titulo_anuncio || "#{@habitation.categoria} em #{@habitation.bairro}" %>
            </h1>
          </div>

          <% if @habitation.display_badges.any? %>
            <div class="flex flex-wrap gap-2 mb-4">
              <% @habitation.display_badges.each do |badge| %>
                <span class="px-3 py-1 bg-<%= badge[:tailwind_color] %> text-white text-[10px] font-bold uppercase tracking-widest rounded-full shadow-sm">
                  <%= badge[:text] %>
                </span>
              <% end %>
            </div>
          <% end %>
          
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2 text-gray-600">
              <i class="bi bi-geo-alt text-golden-one"></i>
              <span class="text-sm">
                <%= @habitation.endereco %>, <%= @habitation.bairro %> - <%= @habitation.cidade %>/<%= @habitation.uf %>
              </span>
            </div>
            
            <div class="flex items-center gap-2 text-gray-500">
              <i class="bi bi-hash text-golden-one"></i>
              <span class="text-xs font-mono">Código: <%= @habitation.codigo %></span>
            </div>
          </div>
        </div>
        
        
        <div class="bg-gradient-to-br from-blue-three to-blue-one text-white rounded-xl p-6 min-w-[280px]">
          <% if @habitation.valor_venda_cents.to_i > 0 %>
            <% has_discount = @habitation.valor_venda_anterior_cents.to_i > @habitation.valor_venda_cents.to_i %>
            
            <% if has_discount %>
              <!-- Valor Reduzido Badge -->
              <div class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full inline-block mb-3">
                <i class="bi bi-tag-fill mr-1"></i>
                VALOR REDUZIDO
              </div>
            <% end %>
            
            <p class="text-xs uppercase tracking-wider mb-1 text-white/70">Valor de Venda</p>
            
            <% if has_discount %>
              <!-- Preço Anterior Riscado -->
              <p class="text-lg line-through text-white/50 mb-1">
                <%= number_to_currency(@habitation.valor_venda_anterior_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
              </p>
            <% end %>
            
            <!-- Preço Atual -->
            <p class="text-3xl font-bold <%= has_discount ? 'text-golden-one' : '' %>">
              <%= number_to_currency(@habitation.valor_venda_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
            </p>
            
            <% if has_discount %>
              <% discount_percent = ((@habitation.valor_venda_anterior_cents - @habitation.valor_venda_cents).to_f / @habitation.valor_venda_anterior_cents * 100).round(1) %>
              <p class="text-sm text-golden-one mt-2 font-semibold">
                <i class="bi bi-arrow-down-circle-fill mr-1"></i>
                <%= discount_percent %>% de desconto
              </p>
            <% end %>
            
          <% elsif @habitation.valor_locacao_cents.to_i > 0 %>
            <p class="text-xs uppercase tracking-wider mb-1 text-white/70">Valor de Locação</p>
            <p class="text-3xl font-bold">
              <%= number_to_currency(@habitation.valor_locacao_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>/mês
            </p>
            
            <% if @habitation.valor_condominio_cents.to_i > 0 %>
              <div class="mt-3 pt-3 border-t border-white/20 text-xs">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-white/70">Condomínio:</span>
                  <span class="text-white font-semibold"><%= number_to_currency(@habitation.valor_condominio_cents / 100.0, unit: 'R$ ', separator: ',', delimiter: '.') %></span>
                </div>
              </div>
            <% end %>

            <% if @habitation.valor_iptu_cents.to_i > 0 %>
              <div class="<%= @habitation.valor_condominio_cents.to_i > 0 ? 'mt-2' : 'mt-3 pt-3 border-t border-white/20' %> text-xs">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-white/70">IPTU:</span>
                  <span class="text-white font-semibold"><%= number_to_currency(@habitation.valor_iptu_cents / 100.0, unit: 'R$ ', separator: ',', delimiter: '.') %></span>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-2xl font-bold">Valor sob Consulta</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Coluna Principal (2/3) -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Galeria de Fotos -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm">
          <% if @habitation.all_images.any? %>
            <div class="swiper h-[400px] lg:h-[500px]" 
                 data-controller="photo-gallery">
              <div class="swiper-wrapper">
                <% @habitation.all_images.each_with_index do |photo, index| %>
                  <div class="swiper-slide">
                    <a href="<%= photo['url'] || photo[:url] %>" 
                       data-fancybox="gallery" 
                       data-caption="<%= @habitation.titulo_anuncio %> - Foto <%= index + 1 %>"
                       class="block w-full h-full">
                      <%= image_tag photo['url'] || photo[:url], 
                          alt: "#{@habitation.titulo_anuncio} - Foto #{index + 1}",
                          class: "w-full h-full object-cover" %>
                    </a>
                  </div>
                <% end %>
              </div>
              <div class="swiper-button-prev !text-white hover:!text-blue-three !z-30 transition-colors shadow-sm drop-shadow-md" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);"></div>
              <div class="swiper-button-next !text-white hover:!text-blue-three !z-30 transition-colors shadow-sm drop-shadow-md" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);"></div>
              <div class="swiper-pagination"></div>
            </div>
          <% else %>
            <div class="h-[400px] bg-gray-100 flex items-center justify-center">
              <div class="text-center">
                <i class="bi bi-image text-6xl text-gray-300 mb-3"></i>
                <p class="text-gray-400">Sem fotos disponíveis</p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Características Principais -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <i class="fas fa-home text-golden-one"></i>
            Características
          </h2>
          
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <i class="fas fa-ruler-combined text-3xl text-golden-one mb-2"></i>
              <p class="text-2xl font-bold text-gray-900"><%= number_with_precision(@habitation.area_total_m2 || @habitation.area_privativa_m2, precision: 0) %></p>
              <p class="text-xs text-gray-500">m² Total</p>
            </div>
            
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <i class="fas fa-door-open text-3xl text-golden-one mb-2"></i>
              <p class="text-2xl font-bold text-gray-900"><%= @habitation.dormitorios_qtd || 0 %></p>
              <p class="text-xs text-gray-500">Quartos</p>
            </div>
            
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <i class="fas fa-bath text-3xl text-golden-one mb-2"></i>
              <p class="text-2xl font-bold text-gray-900"><%= @habitation.banheiros_qtd || 0 %></p>
              <p class="text-xs text-gray-500">Banheiros</p>
            </div>
            
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <i class="fas fa-car text-3xl text-golden-one mb-2"></i>
              <p class="text-2xl font-bold text-gray-900"><%= @habitation.vagas_qtd || 0 %></p>
              <p class="text-xs text-gray-500">Vagas</p>
            </div>
          </div>

          <!-- Detalhes Adicionais -->
          <div class="mt-6 pt-6 border-t border-gray-100 grid grid-cols-2 sm:grid-cols-3 gap-4">
            <% if @habitation.suites_qtd.to_i > 0 %>
              <div class="flex items-center gap-2 text-sm">
                <i class="fas fa-bed text-golden-one"></i>
                <span class="text-gray-700"><%= @habitation.suites_qtd %> Suíte(s)</span>
              </div>
            <% end %>
            
            <% if @habitation.area_privativa_m2.to_f > 0 %>
              <div class="flex items-center gap-2 text-sm">
                <i class="fas fa-expand-arrows-alt text-golden-one"></i>
                <span class="text-gray-700"><%= number_with_precision(@habitation.area_privativa_m2, precision: 0) %> m² Privativa</span>
              </div>
            <% end %>
            
            <% if @habitation.categoria.present? %>
              <div class="flex items-center gap-2 text-sm">
                <i class="fas fa-building text-golden-one"></i>
                <span class="text-gray-700"><%= @habitation.categoria %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Descrição -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <i class="fas fa-align-left text-golden-one"></i>
            Descrição
          </h2>
          <div class="prose prose-sm max-w-none text-gray-700 leading-relaxed">
            <% if @habitation.descricao_web.present? %>
              <%= @habitation.descricao_web %>
            <% else %>
              <%= simple_format("Sem descrição disponível.") %>
            <% end %>
          </div>
        </div>

        <!-- Banner Conteúdo Central -->
        <%= display_banner('property_detail', container_class: 'w-full my-6') %>

        <!-- Características e Infraestrutura -->
        <% if @habitation.caracteristicas.present? || @habitation.infra_estrutura.present? %>
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
              <i class="fas fa-check-circle text-golden-one"></i>
              Características e Infraestrutura
            </h2>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <% if @habitation.caracteristicas.is_a?(Hash) %>
                <% @habitation.caracteristicas.each do |key, value| %>
                  <div class="flex items-center gap-2 text-sm">
                    <i class="fas fa-check text-green-500 text-xs"></i>
                    <span class="text-gray-700"><%= key.to_s.humanize %></span>
                  </div>
                <% end %>
              <% end %>
              
              <% if @habitation.infra_estrutura.is_a?(Array) %>
                <% @habitation.infra_estrutura.each do |item| %>
                  <div class="flex items-center gap-2 text-sm">
                    <i class="fas fa-check text-green-500 text-xs"></i>
                    <span class="text-gray-700"><%= item %></span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

      </div>

      <!-- Coluna Lateral (1/3) -->
      <aside class="lg:col-span-1 space-y-6">
        
        <!-- Card de Contato -->
        <div class="bg-gradient-to-br from-blue-three to-blue-one rounded-xl shadow-lg p-6 text-white sticky top-[96px]">
          <h3 class="text-lg font-bold mb-4">Interessado neste imóvel?</h3>
          
          <!-- WhatsApp Button -->
          <button type="button"
              class="w-full bg-white text-blue-three font-bold py-3 px-4 rounded-lg hover:bg-gray-100 transition-colors flex items-center justify-center gap-2 mb-3"
              data-action="click->lead-capture#open"
              data-property-id="<%= @habitation.id %>"
              data-property-code="<%= @habitation.codigo %>"
              data-property-title="<%= @habitation.titulo_anuncio %>"
              data-whatsapp-message="Olá, estou interessado no imóvel <%= @habitation.titulo_anuncio %> (Código: <%= @habitation.codigo %>). Gostaria de mais informações.">
            <i class="fab fa-whatsapp text-green-500 text-xl"></i>
            Falar no WhatsApp
          </button>
          
          <%= link_to "tel:+554733111067", 
              class: "w-full bg-white/10 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-lg hover:bg-white/20 transition-colors flex items-center justify-center gap-2 mb-3" do %>
            <i class="fas fa-phone text-golden-one"></i>
            Ligar Agora
          <% end %>
          
          <!-- Schedule Visit Button -->
          <button type="button"
              class="w-full bg-white/10 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-lg hover:bg-white/20 transition-colors flex items-center justify-center gap-2"
              data-action="click->lead-capture#open"
              data-property-id="<%= @habitation.id %>"
              data-property-code="<%= @habitation.codigo %>"
              data-property-title="<%= @habitation.titulo_anuncio %>"
              data-whatsapp-message="Olá, gostaria de agendar uma visita para o imóvel <%= @habitation.titulo_anuncio %> (Código: <%= @habitation.codigo %>).">
            <i class="fas fa-calendar text-golden-one"></i>
            Agendar Visita
          </button>
          
          <div class="mt-6 pt-6 border-t border-white/20 text-xs text-center text-white/80">
            <p class="font-semibold text-white text-sm">Fale com um de nossos especialistas</p>
            <p class="mt-1">Estamos prontos para te atender</p>
          </div>
        </div>

        <!-- Informações Adicionais -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Informações</h3>
          
          <div class="space-y-3 text-sm">
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="text-gray-500">Status:</span>
              <span class="font-semibold text-gray-900"><%= @habitation.status || "Disponível" %></span>
            </div>
            
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="text-gray-500">Tipo:</span>
              <span class="font-semibold text-gray-900"><%= @habitation.categoria %></span>
            </div>

            <% if @habitation.caracteristica_unica.present? %>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Caracteristica Unica:</span>
                <span class="font-semibold text-gray-900"><%= @habitation.caracteristica_unica %></span>
              </div>
            <% end %>
            
            <% if @habitation.data_entrega.present? %>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Entrega:</span>
                <span class="font-semibold text-gray-900"><%= l(@habitation.data_entrega, format: :short) %></span>
              </div>
            <% end %>
            
            <% if @habitation.nome_empreendimento.present? %>
              <div class="flex justify-between py-2">
                <span class="text-gray-500">Empreendimento:</span>
                <span class="font-semibold text-gray-900"><%= @habitation.nome_empreendimento %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Banner Lateral -->
        <%= display_banner('sidebar', container_class: 'mt-6', force_mobile: true) %>

        <!-- Compartilhar -->
        <div class="bg-white rounded-xl shadow-sm p-6" data-controller="share">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Compartilhar</h3>
          
          <div class="flex gap-2">
            <a href="#" data-action="click->share#facebook" 
               class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 rounded-lg transition-colors flex items-center justify-center">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" data-action="click->share#twitter"
               class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 rounded-lg transition-colors flex items-center justify-center">
              <i class="fab fa-x-twitter"></i>
            </a>
            <a href="mailto:?subject=<%= url_encode(@habitation.display_title) %>&body=Confira este imóvel na Salute Imóveis: <%= request.original_url %>"
               class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 rounded-lg transition-colors flex items-center justify-center">
              <i class="fas fa-envelope"></i>
            </a>
            <button data-action="click->share#copy" data-share-target="link"
                    class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 rounded-lg transition-colors flex items-center justify-center">
              <i class="fas fa-link"></i>
            </button>
          </div>
        </div>

      </aside>

    </div>

    <!-- Imóveis Relacionados -->
    <% if @related_properties&.any? %>
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Imóveis Semelhantes</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @related_properties.each do |property| %>
            <%= render 'shared/tailwind/property_card', property: property %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
