<div class="card h-100 shadow-sm">
  <% if habitation.primary_image_url.present? %>
    <%= image_tag habitation.primary_image_url, 
        alt: habitation.display_title,
        class: 'card-img-top',
        loading: 'lazy',
        style: 'height: 200px; object-fit: cover;' %>
  <% else %>
    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
      <span class="text-white">Sem imagem</span>
    </div>
  <% end %>
  
  <div class="position-absolute top-0 start-0 m-2 d-flex flex-column gap-1" style="z-index: 10;">
    <% habitation.display_badges.each do |badge| %>
      <span class="badge rounded-pill bg-<%= badge[:color] %> shadow-sm px-2 py-1_5 fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px; text-transform: uppercase; border: 1px solid rgba(255,255,255,0.2);">
        <%= badge[:text] %>
      </span>
    <% end %>
  </div>
  
  <div class="card-body d-flex flex-column">
    <h5 class="card-title text-truncate" title="<%= habitation.display_title %>">
      <%= habitation.display_title %>
    </h5>
    
    <p class="text-muted small mb-2">
      <i class="bi bi-geo-alt"></i> <%= habitation.short_address %>
    </p>
    
    <p class="fw-bold text-primary fs-5 mb-3">
      <%= habitation.preco_principal %>
    </p>
    
    <div class="d-flex justify-content-between text-muted small mb-3">
      <% if habitation.dormitorios_qtd.to_i > 0 %>
        <span title="Dormitórios">
          <i class="bi bi-door-closed"></i> <%= habitation.dormitorios_qtd %>
        </span>
      <% end %>
      
      <% if habitation.banheiros_qtd.to_i > 0 %>
        <span title="Banheiros">
          <i class="bi bi-droplet"></i> <%= habitation.banheiros_qtd %>
        </span>
      <% end %>
      
      <% if habitation.vagas_qtd.to_i > 0 %>
        <span title="Vagas">
          <i class="bi bi-car-front"></i> <%= habitation.vagas_qtd %>
        </span>
      <% end %>
      
      <% if habitation.area_total_m2.to_f > 0 %>
        <span title="Área">
          <i class="bi bi-arrows-fullscreen"></i> <%= habitation.area_formatted %>
        </span>
      <% end %>
    </div>
    
    <div class="mt-auto">
      <%= link_to 'Ver Detalhes', property_path(habitation), class: 'btn btn-outline-primary w-100' %>
    </div>
  </div>
</div>
