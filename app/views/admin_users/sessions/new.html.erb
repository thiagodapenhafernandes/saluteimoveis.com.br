<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "seu@email.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Lembrar-me", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Entrar", class: "btn btn-login" %>
  </div>
  
  <% if devise_mapping.recoverable? %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "forgot-link" %>
  <% end %>
<% end %>
