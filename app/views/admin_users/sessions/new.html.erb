<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, "E-mail Profissional", class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px; border: 1.5px solid #e5e7eb;">
        <i class="bi bi-envelope text-muted"></i>
      </span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-start-0", style: "border-radius: 0 12px 12px 0; border: 1.5px solid #e5e7eb;", placeholder: "nome@salute.com.br" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha de Acesso", class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px; border: 1.5px solid #e5e7eb;">
        <i class="bi bi-key text-muted"></i>
      </span>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-start-0", style: "border-radius: 0 12px 12px 0; border: 1.5px solid #e5e7eb;", placeholder: "Digite sua senha" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Manter desconectado", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="form-group mb-0">
    <%= f.button type: :submit, class: "btn-login" do %>
      <span>Entrar no Painel</span>
      <i class="bi bi-arrow-right"></i>
    <% end %>
  </div>
  
  <% if devise_mapping.recoverable? %>
    <%= link_to "Recuperar acesso", new_password_path(resource_name), class: "forgot-link" %>
  <% end %>
<% end %>
