<!-- Code Search Modal (Image Replica) -->
<div id="code-search-modal" 
     class="fixed inset-0 z-[100] hidden" 
     aria-labelledby="modal-title" 
     role="dialog" 
     aria-modal="true"
     data-controller="code-search">
  
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity backdrop-blur-sm" 
       data-action="click->code-search#close"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      
      <!-- Modal Panel -->
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        
        <!-- Header -->
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4 border-b border-gray-100">
          <div class="flex items-center gap-2">
            <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-blue-50">
              <i class="bi bi-search text-blue-three text-lg"></i>
            </div>
            <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">
              Buscar por Código
            </h3>
            <button type="button" class="ml-auto text-gray-400 hover:text-gray-500" data-action="click->code-search#close">
              <i class="bi bi-x-lg"></i>
            </button>
          </div>
        </div>

        <!-- Body -->
        <div class="bg-white px-4 py-8 sm:p-10">
          <%= form_with url: search_by_code_path, method: :get, data: { turbo: false } do |f| %>
            <div class="space-y-6">
              <div>
                <label for="code-input" class="block text-sm font-medium text-gray-700 mb-2">
                  Digite o código do imóvel
                </label>
                <div class="relative mt-2 rounded-md shadow-sm">
                  <%= f.text_field :code, 
                      id: "code-input",
                      class: "block w-full rounded-md border-0 py-4 pl-4 pr-4 text-gray-900 ring-1 ring-inset ring-blue-three placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-three sm:text-2xl text-center tracking-widest font-bold", 
                      placeholder: "Ex: 1234",
                      autofocus: true,
                      data: { code_search_target: "input" } %>
                </div>
                <p class="mt-2 text-center text-sm text-gray-500 flex items-center justify-center gap-1">
                  <i class="bi bi-info-circle"></i>
                  Digite apenas números
                </p>
              </div>

              <div class="mt-5 sm:mt-6">
                <%= button_tag type: 'submit', class: "inline-flex w-full justify-center rounded-md bg-blue-three px-3 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-one focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors" do %>
                  Buscar Imóvel
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
      </div>
    </div>
  </div>
</div>
